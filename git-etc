
# git-etc - End Commit Script
if [ $# -eq 0 ]; then
    echo "âŒ Please provide a commit message: git etc \"your message\""
    exit 1
fi

commit_message=$1
current_branch=$(git branch --show-current)

echo "ğŸ¯ Ending work session..."

# Check if there are changes to commit
if git diff-index --quiet HEAD --; then
    echo "â„¹ï¸  No changes to commit"
else
    # Add all changes
    echo "ğŸ“¦ Staging changes..."
    git add .
    
    # Commit changes
    echo "ğŸ’¾ Committing changes..."
    git commit -m "$commit_message"
    
    # Push changes
    echo "ğŸš€ Pushing to remote..."
    git push origin $current_branch
    
    echo "âœ… Successfully committed and pushed!"
    echo "ğŸ“ Commit message: $commit_message"
    echo "ğŸŒ¿ Branch: $current_branch"
fi

# Show final status
echo "ğŸ“Š Final status:"
git status --short

echo "ğŸ‰ Work session completed!"